  </div>
  <h1 style="color:rgb(62, 60, 60);  text-align: center;">Welkomen til Bådpark</h1>
  <h4 style="color:rgb(62, 60, 60);  text-align: center;">Her du kan slette,redigere eller oprete Båder</h4>


  <div class="container">

    <div id="alert"></div>
    <div class="panel-body col-md-6">
      <ul class="list-group" id="products">
        <% badpark.forEach(function(badpark) { %>

          <li class="list-group-item product">
            <div class="row">
              <div class="col-sm-12 product_img img-admin-product">

                <img class="img1" src="/images/<%= badpark.foto %>" alt="">
                <h3>
                  <%= badpark.type %>
                </h3>
                <p>
                  <%= badpark.navn %>
                </p>
                <p>
                  <%= badpark.sværhedsgrad %>
                </p>
                <p>
                    <%= badpark.antal %>
                  </p>
                  <p>
                      <%= badpark.pris %>
                    </p>
              </div>
              <div class="col-xs-10 col-md-11">
                <div>
                  <p class="producttitle">
                    <p class="cykelp"></p>

                  </p>
                </div>
                <div class="product-description">
                  <p class="productdescription">

                  </p>
                </div>
                <div class="product-price">
                  <p class="pricetext">
                    DKK </p>
                </div>
                <div class="action">
                  <a href="#" type="button" class="btn btn-primary btn-xs edit" data-id="<%= badpark.id %>" title="Rediger">
                    <span class="glyphicon glyphicon-pencil"></span>
                  </a>
                  <a href="#" type="button" class="btn btn-danger btn-xs delete" data-id="<%= badpark.id %>" title="Slet">
                    <span class="glyphicon glyphicon-trash"></span>
                  </a>
                </div>
              </div>
            </div>
          </li>
          <% }) %>
      </ul>
    </div>

    <div class="panel-body col-md-6">
      <form class="form-horizontal" id="form-redigere">
        <fieldset>

          <!-- Form Name -->
          <legend style="color:red;">Rediger Båder</legend>


          <!-- FOTO input-->
          <div class="form-group">
              <label class="col-md-6 control-label" for="url">URL</label>
              <div class="col-md-6">
                <input id="url1" name="url" placeholder="Billede" class="input-file" required="" type="file" value="billede.jpg">
  
              </div>
            </div>
  
            <!-- Text input-->
            <div class="form-group">
              <label class="col-md-6 control-label" for="pris">Type</label>
              <div class="col-md-6">
                <input id="type1" name="type" placeholder="Type:" class="form-control input-md" required="" type="text">
  
              </div>
            </div>
  
            <!-- Text input-->
            <div class="form-group">
              <label class="col-md-6 control-label" for="farve">Navn</label>
              <div class="col-md-6">
                <input id="navn1" name="navn" placeholder="Navn:" class="form-control input-md" required="" type="text">
              </div>
            </div>
  
             <!-- Text input-->
             <div class="form-group">
                <label class="col-md-6 control-label" for="farve">Sværhedsgrad</label>
                <div class="col-md-6">
                  <input id="sværgrad1" name="sværgrad" placeholder="" class="form-control input-md" required="" type="number">
                </div>
              </div>
  
               <!-- Text input-->
            <div class="form-group">
                <label class="col-md-6 control-label" for="farve">Antal</label>
                <div class="col-md-6">
                  <input id="antal1" name="antal" placeholder="" class="form-control input-md" required="" type="number">
                </div>
              </div>
              
               <!-- Text input-->
            <div class="form-group">
                <label class="col-md-6 control-label" for="farve">Pris</label>
                <div class="col-md-6">
                  <input id="pris1" name="pris" placeholder="Pris:" class="form-control input-md" required="" type="text">
                </div>
              </div>
  
            <!-- Button -->
            <div class="form-group">
              <label class="col-md-6 control-label" for="singlebutton">Gem ændringer</label>
              <div class="col-md-6">
                <button id="redigereProdukt" name="redigereProdukt" class="btn btn-primary">Gem</button>
  
  
            </div>
          </div>

        </fieldset>
      </form>

    </div>

    <div class="panel-body col-md-6">
      <form class="form-horizontal" id="form-opret">
        <fieldset>

          <!-- Form Name -->
          <legend style="color:red;">Oprete Båder</legend>


          <!-- FOTO input-->
          <div class="form-group">
            <label class="col-md-6 control-label" for="url">URL</label>
            <div class="col-md-6">
              <input id="url" name="url" placeholder="Billede" class="input-file" required="" type="file" value="billede.jpg">

            </div>
          </div>

          <!-- Text input-->
          <div class="form-group">
            <label class="col-md-6 control-label" for="pris">Type</label>
            <div class="col-md-6">
              <input id="type" name="type" placeholder="Type:" class="form-control input-md" required="" type="text">

            </div>
          </div>

          <!-- Text input-->
          <div class="form-group">
            <label class="col-md-6 control-label" for="farve">Navn</label>
            <div class="col-md-6">
              <input id="navn" name="navn" placeholder="Navn:" class="form-control input-md" required="" type="text">
            </div>
          </div>

           <!-- Text input-->
           <div class="form-group">
              <label class="col-md-6 control-label" for="farve">Sværhedsgrad</label>
              <div class="col-md-6">
                <input id="sværgrad" name="sværgrad" placeholder="" class="form-control input-md" required="" type="number">
              </div>
            </div>

             <!-- Text input-->
          <div class="form-group">
              <label class="col-md-6 control-label" for="farve">Antal</label>
              <div class="col-md-6">
                <input id="antal" name="antal" placeholder="" class="form-control input-md" required="" type="number">
              </div>
            </div>
            
             <!-- Text input-->
          <div class="form-group">
              <label class="col-md-6 control-label" for="farve">Pris</label>
              <div class="col-md-6">
                <input id="pris" name="pris" placeholder="Pris:" class="form-control input-md" required="" type="text">
              </div>
            </div>

          <!-- Button -->
          <div class="form-group">
            <label class="col-md-6 control-label" for="singlebutton">Gem ændringer</label>
            <div class="col-md-6">
              <button id="opretProdukt" name="opretProdukt" class="btn btn-primary">Gem</button>


            </div>
          </div>

        </fieldset>
      </form>

    </div>


  </div>
  <script src="/javascripts/delete.js"></script>
  <script src="/javascripts/redigereProdukter.js"></script>
  <script src="/javascripts/opretProdukt.js"></script>

</body>

</html>